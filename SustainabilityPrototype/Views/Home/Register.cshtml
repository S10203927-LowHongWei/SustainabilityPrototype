@model SustainabilityPrototype.Models.Student

@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Simple Login Form Example</title>
    <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Rubik:400,700'>
    <link rel="stylesheet" href="~/css/login.css">
</head>

<body>
    <div class="login-form">
        <form asp-action="Registered">
            <h1>Register</h1>
            <div class="content">
                <div class="input-field">
                    <input asp-for="Username" type="text" placeholder="StudentId" autocomplete="nope" name="username">
                </div>
                <div class="input-field">
                    <input asp-for="StudentName" type="text" placeholder="Name" autocomplete="nope" name="name">
                </div>
                <div class="input-field">
                    <label class="col">
                        <input asp-for="Gender" type="radio" value="M" checked class="form-check-input" style="width:50%;" />
                        <span style="font-weight:normal; ">Male</span>
                    </label>
                    <label class="col">
                        <input asp-for="Gender" type="radio" value="F" class="form-check-input" style="width:50%;" />
                        <span style="font-weight:normal;">Female</span>
                    </label>
                </div>
                <!--
                <div class="input-field">
                    <label class="col-form-label">
                        <input asp-for="Gender" type="radio" value="M" checked class="form-check-input" />
                        <span style="font-weight:normal;padding-right:20px">Male</span>
                    </label>
                    <label class="col-form-label">
                        <input asp-for="Gender" type="radio" value="F" class="form-check-input" />
                        <span style="font-weight:normal;padding-right:20px">Female</span>
                    </label>
                </div>
                    -->
                <div class="input-field">
                    <input asp-for="DOB" type="datetime-local" placeholder="Date of birth" autocomplete="nope" name="dob">
                </div>
                <div class="input-field">
                    <input asp-for="StudentPassword" type="password" name="password" placeholder="Password" autocomplete="new-password">
                </div>
            </div>
            <div class="action">
                <input type="submit" value="Register" class="btn btn-dark" />
                <!--
    <button>Create</button>
        -->
            </div>
        </form>
    </div>
</body>
</html>
