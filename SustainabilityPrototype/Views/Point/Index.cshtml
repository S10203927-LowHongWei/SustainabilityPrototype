@model SustainabilityPrototype.Models.Student

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}
<!DOCTYPE HTML>
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans&display=swap" rel="stylesheet">
</head>
<html>
<body>
    <img src="~/images/Ngee_Ann_Polytechnic_logo.svg.png" style="width:100%" />
    @if (ViewData["User"].ToString() == "Student")
    {
        <div class="information-box">
            <div class="information-box-info">

                <p>Name : @ViewData["Name"]</p>
                <p>Email : @ViewData["Email"]</p>
                <p>DOB : @ViewData["DOB"].ToString()</p>
            </div>
        </div>
        <div class="pointsContainer">
            <img src="~/images/pointsbanner.jpg" style="width:100%" />
            <div class="points"><h1>You have @ViewData["Points"] points</h1></div>
        </div>
    }
    else if (ViewData["User"].ToString() == "Vendor")
    {
        <style>
        .button:hover {
            box-shadow: 0 0 0.2rem #fff, 0 0 0.2rem #fff, 0 0 0.2rem #6E57E0, 0 0 0.2rem #6E57E0, 0 0 0.2rem #6E57E0, inset 0 0 1.3rem #6E57E0;
            transition: 0.7s;
            animation: anim 1.5s infinite alternate;
            border-style: none;
        }
        </style>
        <p style="font-size:3rem; font:bold">Welcome, @ViewData["Name"]</p>
        <div class="pointsContainer">
            <img src="~/images/pointsbanner.jpg" style="width:100%" />
            <div class="points"><p style="font-size:2.5rem; font:bold">You have @ViewData["Points"] points</p></div>
        </div>
        <section style="display:flex; justify-content:center;">
            <button class="button" style="border-style:solid; border-radius:50px; background-color: lightgrey; width:100%; height:auto; margin-top:20%; font-weight:bold; font-size:30px;">Scan QR code</button>
        </section>
        <section style="display:flex; justify-content:center;">
            <button class="button" style="border-style:solid; border-radius:50px; background-color: lightgrey; width:100%; height:auto; margin-top:10%; font-weight:bold; font-size:30px;">Claim All Points</button>
        </section>
        <section style="display:flex; justify-content:center;">
            <button class="button" style="border-style:solid; border-radius:50px; background-color: lightgrey; width:100%; height:auto; margin-top:10%; margin-bottom:10%; font-weight:bold; font-size:30px;">Current Orders</button>
        </section>
    }
</body>
</html>
