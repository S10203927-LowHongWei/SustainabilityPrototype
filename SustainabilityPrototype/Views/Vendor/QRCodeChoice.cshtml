
@{
    ViewData["Title"] = "QRCodeChoice";
}

<style>
    .button:hover {
        box-shadow: 0 0 0.2rem #fff, 0 0 0.2rem #fff, 0 0 0.2rem #6E57E0, 0 0 0.2rem #6E57E0, 0 0 0.2rem #6E57E0, inset 0 0 1.3rem #6E57E0;
        transition: 0.7s;
        animation: anim 1.5s infinite alternate;
        border-style: none;
    }
</style>

<div style="width:100%; height:auto; background-color:dodgerblue; font-size:5rem; font-weight:bold; border-radius: 25px;">FoodClub</div>
<img src="~/images/Ngee_Ann_Polytechnic_logo.svg.png" style="width:100%" />
<h1 style="text-align:center; font-weight:bold; font-size:5rem; margin:100px 0px;">Welcome,<br />Indonesian</h1>
<div class="pointsContainer">

    <img src="~/images/pointsbanner.jpg" style="width:100%" />
    <div class="points"><h1>You have @ViewData["Points"] 2 million points</h1><h1>CLAIMABLE</h1></div>

</div>

<section style="display:flex; justify-content:center;">
    <button class="button" style="border-style:solid; border-radius:50px; background-color: lightgrey; width:50%; height:100px; font-weight:bold; font-size:30px; margin-top:100px">Redeem Voucher</button>
</section>
<section style="display:flex; justify-content:center;">
    <button class="button" style="border-style:solid; border-radius:50px; background-color: lightgrey; width:50%; height:100px; margin-top:40px; font-weight:bold; font-size:30px; margin-bottom:100px;">Give Points</button>
</section>

