
@{
    ViewData["Title"] = "GivingVoucher";
}

<!DOCTYPE html>
<html>
<head>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
</head>


<body>
    <div style="width:100%; height:auto; background-color:dodgerblue; font-size:100px; font-weight:bold; border-radius: 25px;">FoodClub</div>
    <img src="~/images/Ngee_Ann_Polytechnic_logo.svg.png" style="width:100%" />

    <div style="display:flex; justify-content:space-around; background-color:lightblue; padding:20px 0; border-style:solid; border-width:2px; border-color:black;">
        <h2 style="font-weight:bold; font-size:2rem;">Item</h2>
        <h2 style="font-weight:bold; font-size:2rem;">Quantity</h2>
    </div>




    <div style="border:solid black 2px;">
        <div style="display:flex; justify-content:space-around;">
            <div style="display:flex; flex-flow:wrap column;">
                <h2 >Reusable Cups</h2>
                <h2 >Reusable Container</h2>
            </div>


            <div style="display: flex; flex-flow:wrap column;">
                <div style="width:150px; margin-right:4rem">

                    <div class="input-group" style="padding:2rem 0;">
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-danger btn-number" data-type="minus" data-field="quant[1]">
                                <span class="glyphicon glyphicon-minus"></span>
                            </button>
                        </span>
                        <input type="text" name="quant[1]" class="form-control input-number" value="1" min="1" max="10">
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-success btn-number" data-type="plus" data-field="quant[1]">
                                <span class="glyphicon glyphicon-plus"></span>
                            </button>
                        </span>
                    </div>

                    <div class="input-group">
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-danger btn-number" data-type="minus" data-field="quant[2]">
                                <span class="glyphicon glyphicon-minus"></span>
                            </button>
                        </span>
                        <input type="text" name="quant[2]" class="form-control input-number" value="1" min="1" max="10">
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-success btn-number" data-type="plus" data-field="quant[2]">
                                <span class="glyphicon glyphicon-plus"></span>
                            </button>
                        </span>
                    </div>
                </div>
            </div>
        </div>






        <div style="display:flex; flex-wrap:wrap; justify-content:space-around; background-color:lightgrey; padding:20px 0; border-top:0.3rem solid black;">
            <h2 style="font-weight:bold;">Total points awarded</h2>
            <h2 style="font-weight:bold; margin-right:10rem">200</h2>
        </div>
    </div>

    <section style="display:flex; justify-content:center;">
        <button class="button" style="border-style:solid; border-radius:50px; background-color: lightgrey; width:50%; height:100px; margin-top:100px; font-weight:bold; font-size:30px; color:green">Confirm</button>
    </section>
    <section style="display:flex; justify-content:center;">
        <button class="button" style="border-style:solid; border-radius:50px; background-color: lightgrey; width:50%; height:100px; margin-top:40px; font-weight:bold; font-size:30px; margin-bottom:100px;">Back To Home</button>
    </section>



</body>




</html>



<script src="~/js/counter.js"></script>



