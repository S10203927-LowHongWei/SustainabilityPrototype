
@{
    ViewData["Title"] = "GivingVoucher";
    Layout = "~/Views/Shared/_VendorLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
</head>


<body>
    <div style="width:100%; height:auto; background-color:dodgerblue; font-size:5rem; font-weight:bold; border-radius: 25px;">FoodClub</div>
    <img src="~/images/Ngee_Ann_Polytechnic_logo.svg.png" style="width:100%" />

    <div style="display:flex; justify-content:space-around; background-color:lightblue; padding:20px 0; border-style:solid; border-width:2px; border-color:black;">
        <h2 style="font-weight:bold; font-size:2rem;">Item</h2>
        <h2 style="font-weight:bold; font-size:2rem;">Quantity</h2>
    </div>




    <div style="border:solid black 2px;">
        <div style="display:flex; justify-content:space-around;">
            <div style="display:flex; flex-flow:wrap column;">
                <h2>Reusable Cups</h2>
                <h2>Reusable Container</h2>
            </div>


            <div style="display: flex; flex-flow:wrap column;">
                <div style="width:15rem; margin-right:4rem;">

                    <div class="input-group" style="padding:2rem 0;">
                        <span class="input-group-btn">
                            <button onclick="CupDecrease()" type="button" class="btn btn-danger btn-number" data-type="minus" data-field="quant[1]">
                                <span class="glyphicon glyphicon-minus"></span>
                            </button>
                        </span>
                        <input type="text" name="quant[1]" class="form-control input-number" value="0" min="0" max="10" onchange="Sum()">
                        <span class="input-group-btn">
                            <button onclick="CupIncrease()" type="button" class="btn btn-success btn-number" data-type="plus" data-field="quant[1]">
                                <span class="glyphicon glyphicon-plus"></span>
                            </button>
                        </span>
                    </div>

                    <div class="input-group">
                        <span class="input-group-btn">
                            <button onclick="ContainerDecrease()" type="button" class="btn btn-danger btn-number" data-type="minus" data-field="quant[2]">
                                <span class="glyphicon glyphicon-minus"></span>
                            </button>
                        </span>
                        <input onchange="Sum()" type="text" name="quant[2]" class="form-control input-number" value="0" min="0" max="10">
                        <span class="input-group-btn">
                            <button onclick="ContainerIncrease()" type="button" class="btn btn-success btn-number" data-type="plus" data-field="quant[2]">
                                <span class="glyphicon glyphicon-plus"></span>
                            </button>
                        </span>
                    </div>
                </div>
            </div>
        </div>





        <form method="post">
            <div style="display:flex; flex-flow:wrap column; justify-content:space-around; background-color:lightgrey; padding:20px 0; border-top:0.3rem solid black;">
                <div style="flex-flow:wrap column">
                    <div style="align-content:center">
                        <p style="font-weight:bold; font-size:3rem; width:100%">Total points awarded</p>
                        <input type="text" readonly name="total" id="total" style="width:auto; font-size:1.5rem;text-align:center;font-weight:bold;">
                    </div>
                </div>
                <div style="flex-flow:wrap column">
                    <section style="display:flex; justify-content:center;">
                        <button onclick="GivePoints()" asp-controller="Vendor" asp-action="GivingVoucher" class="button" style="border-style:solid; border-radius:50px; background-color: lightgrey; width:50%; height:100px; margin-top:100px; font-weight:bold; font-size:30px; color:green">Confirm</button>
                    </section>
                    <section style="display:flex; justify-content:center;">
                        <button class="button" asp-controller="Vendor" asp-action="Index" style="border-style:solid; border-radius:50px; background-color: lightgrey; width:50%; height:100px; margin-top:40px; font-weight:bold; font-size:30px; margin-bottom:100px;">Back To Home</button>
                    </section>
                </div>
            </div>
        </form>
    </div>

    <script type="text/javascript">
        var sum = 0;
        var cups = 0;
        var container = 0;
        function CupDecrease() {
            if (cups > 0) {
                cups-=1
            }
        }
        function CupIncrease() {
            if (cups < 10) {
                cups += 1
            }
        }
        function ContainerDecrease() {
            if (container > 0) {
                container -= 1
            }
        }
        function ContainerIncrease() {
            if (container < 10) {
                container += 1
            }
        }
        function Sum() {
            console.log(cups)
            console.log(container)
            sum = (cups * 5) + (container * 15)
            document.getElementById("total").setAttribute('value', sum);
            console.log(sum)
        }
        function GivePoints() {
            return sum;
        }
    </script>


</body>




</html>



<script src="~/js/counter.js"></script>



