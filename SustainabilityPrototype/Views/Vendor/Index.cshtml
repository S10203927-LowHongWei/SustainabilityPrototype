
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_VendorLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<body onload="Success()">
    <style>
        .button:hover {
            box-shadow: 0 0 0.2rem #fff, 0 0 0.2rem #fff, 0 0 0.2rem #6E57E0, 0 0 0.2rem #6E57E0, 0 0 0.2rem #6E57E0, inset 0 0 1.3rem #6E57E0;
            transition: 0.7s;
            animation: anim 1.5s infinite alternate;
            border-style: none;
        }
    </style>
        <div class="main">
            <p style="font-size:3rem; font:bold">Welcome, @ViewData["Name"]</p>
            <div class="pointsContainer">
                <img src="~/images/pointsbanner.jpg" style="width:100%; height:100%" />
                <div class="points"><p style="font-size:2.5rem; font:bold">You have @ViewData["Points"] points</p></div>
            </div>
            <form>
                <section style="display:flex; justify-content:center;">
                    <button asp-controller="Vendor" asp-action="QRCodeChoice" class="button" style="border-style:solid; border-radius:50px; background-color: lightgrey; width:100%; height:auto; margin-top:13%; font-weight:bold; font-size:30px;">Scan QR code</button>
                </section>
            </form>
            <section style="display:flex; justify-content:center;">
                <button class="button" style="border-style:solid; border-radius:50px; background-color: lightgrey; width:100%; height:auto; margin-top:8%; font-weight:bold; font-size:30px;" data-toggle="modal" data-target="#modalPointsToggle">Claim All Points</button>
            </section>
            <section style="display:flex; justify-content:center;">
                <button class="button" style="border-style:solid; border-radius:50px; background-color: lightgrey; width:100%; height:auto; margin-top:8%; margin-bottom:10%; font-weight:bold; font-size:30px;" onclick="location.href='@Url.Action("CurrentOrders", "Vendor")'">Current Orders</button>
            </section>
        </div>

    <!-- Button trigger modal -->
    @*<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalToggle" id="launchModal" onclick="">
            Launch modal
        </button>*@

    <!-- Modal -->
    <!--<div class="modal fade" id="modalToggle" tabindex="-1" role="dialog" aria-labelledby="modalToggleCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">

                <div class="modal-body text-center" style="font-weight:bold; font-size:1.5rem; color:green;">
                    <p>@ViewData["Msg"]</p>
                    <button class="button" style="border-style:solid; border-radius:50px; background-color: lightgrey; width:45%; height:3rem; margin:20px; font-weight:bold; font-size:20px;" data-dismiss="modal">Okay</button>
                </div>
            </div>
        </div>
    </div>-->
    <!--Modal claim points-->
    <div class="modal fade" id="modalPointsToggle" tabindex="-1" role="dialog" aria-labelledby="modalToggleCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">

                <div class="modal-body text-center" style="font-weight:bold; font-size:2rem; color:limegreen;">
                    200 points converted to $20
                </div>
                <div class="modal-footer" style="display:flex; justify-content:center;">
                    <button class="button" style="border-style:solid; border-radius:50px; background-color: lightgrey; width:30%; height:4rem; margin:30px 0; font-weight:bold; font-size:20px;" data-dismiss="modal">Okay</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
